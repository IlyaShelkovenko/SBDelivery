<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="colorOnSurface">@color/white</item>

    </style>
    
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="Button_Main">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_large_20</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:layout_marginStart">@dimen/spacing_huge_32</item>
        <item name="android:layout_marginEnd">@dimen/spacing_huge_32</item>
        <item name="android:padding">@dimen/spacing_normal_16</item>
        <item name="cornerRadius">@dimen/spacing_small_8</item>
    </style>

    <style name="Button_Transparent" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_large_20</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:layout_marginStart">@dimen/spacing_huge_32</item>
        <item name="android:layout_marginEnd">@dimen/spacing_huge_32</item>
        <item name="android:padding">@dimen/spacing_normal_16</item>
        <item name="cornerRadius">@dimen/spacing_small_8</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.EditTextTheme">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="Widget.MyApp.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="theme">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>


</resources>
